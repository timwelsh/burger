<div class="container">
  <div class="row">

    <div class="col-4">
      <div class="row">
        <div class="col-1"></div>
          <div class="col-10" id="format-col">
            <h3>Add a Burger</h3>
            <form class="create-form">
              <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" class="form-control" id="burger" name="burger_name">
              </div>
              <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Not Devoured
              </div>
              <button type="submit" class="btn btn-primary">Add Burger</button>
            </form>
          </div>  
        <div class="col-1"></div>
      </div>
    </div> 
    {{!-- end of 1st 3rd --}}

    <div class="col-4">
      <div class="row">
        <div class="col-1"></div>
          <div class="col-10" id="format-col">
            <h3>Burgers that are not devoured!</h3>
            <ul class="list-group">
              {{#each burgers}}
                <li class="list-group-item list-group-item-primary list-group-item-action">
                  <span><h5>{{id}}. {{burger_name}}</h5></span>
                  <div><button type="button" class="btn btn-primary clicked" id="{{id}}">Devour!</button></div>
                </li>
              {{/each}}
            </ul>
          </div>
        <div class="col-1"></div>
      </div>
    </div>
    {{!-- end of middle 3rd --}}

    <div class="col-4">
      <div class="row">
        <div class="col-1"></div>
          <div class="col-10" id="format-col">
            <h3>Burgers that are devoured!</h3>
            <ul class="list-group">
              {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item list-group-item-primary list-group-item-action">
                  <p><strong>{{id}} . </strong></p> <h5>{{burger_name}}</h5>
                </li>
                {{!-- {{#if devoured}}
                {{/if}} --}}
                {{/unless}}
              {{/each}}
            </ul>
            </div>
          </div>
        <div class="col-1"></div>
      </div>
    </div>
  </div>
</div>

