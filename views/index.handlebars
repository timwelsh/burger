<div class="container">
  <div class="jumbotron">
    <div class="background">
      <h1 class="display-3">Keep track of Burgers devoured!</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="md-col-4"><h3>Create new Burger</h3></div>
    <div class="md-col-4"><h3>Burgers Not devoured</h3></div>
    <div class="md-col-4"><h3>Burgers devoured</h3></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="md-col-4">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Not Devoured
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
    <div class="md-col-4">
      <h2>Burgers that are not devoured!</h2>
      <ul>
      {{#each burgers}}
      <li>
        <p><strong>{{burger_name}}</strong></p>
      </li>
      {{/each}}
      </ul>
    </div>
    <div class="md-col-4">
      <h2>Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

